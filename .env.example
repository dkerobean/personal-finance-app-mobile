# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# RESEND Configuration (for email verification)
EXPO_PUBLIC_RESEND_API_KEY=your_resend_api_key_here

# MTN MoMo API Configuration
EXPO_PUBLIC_MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_momo_subscription_key_here
EXPO_PUBLIC_MTN_MOMO_BASE_URL_SANDBOX=https://sandbox.momodeveloper.mtn.com
EXPO_PUBLIC_MTN_MOMO_BASE_URL_PRODUCTION=https://api.momodeveloper.mtn.com
EXPO_PUBLIC_MTN_MOMO_TARGET_ENVIRONMENT=sandbox
# Callback URL for MTN MoMo webhooks
# Development: Use webhook.site or ngrok (e.g., https://webhook.site/unique-id)
# Production: Use your deployed webhook endpoint (e.g., https://your-project.supabase.co/functions/v1/momo-webhook)
EXPO_PUBLIC_MTN_MOMO_CALLBACK_HOST=https://your-callback-url.com

# MTN MoMo webhook security
# Secret key for verifying webhook signatures (set this in Supabase Edge Function secrets)
# Generate with: openssl rand -hex 32
MTN_MOMO_WEBHOOK_SECRET=your-webhook-secret-key-here